@model List<SchoolProject.Models.Teacher>
@{
    ViewBag.Title = "Teachers List";
}

<h2>List Of Teachers</h2>
<form action="/Teacher/List" method="GET">
    <input type="text" name="SearchKey" autocomplete="off" />
    <input type="submit" value="Search" />
</form>
<a class="AddLink" href="/Teacher/New">ADD</a>
<table>
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
        </tr>
    </thead>
    @foreach (var teacher in Model)
    {
        <tr>
            <td>
               <a href="Show/@teacher.TeacherId"> @teacher.TeacherId</a>
            </td>
            <td>
                @teacher.TeacherFName @teacher.TeacherLName
            </td>
            
        </tr>
    }

</table>


